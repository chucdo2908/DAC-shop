<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFE5D8"
    tools:context=".Thongtin_cn">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Nhập tên : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/Ten"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:hint="Nhập tên...."
            android:background="@drawable/bg_cho"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Địa chỉ : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/diachi"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:hint="Nhập địa chỉ...."
            android:background="@drawable/bg_cho"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="SĐT : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/SDT"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:hint="Nhập số điện thoại...."
            android:background="@drawable/bg_cho"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Ngày sinh : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/ngaysinh"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:hint="Nhập ngày sinh...."
            android:background="@drawable/bg_cho"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/xacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        android:background="@drawable/bg_tt"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="290dp"/>
</RelativeLayout>