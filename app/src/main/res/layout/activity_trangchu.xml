<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEC2D8"
    android:paddingTop="5dp"
    tools:context=".Trangchu">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:src="@mipmap/ic_banner"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="tìm kiếm..."
        android:layout_marginLeft="60dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:background="@drawable/bg_cho"
        android:layout_marginLeft="320dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/bg_tktt">

        <ImageButton
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cho"
            android:src="@mipmap/nike" />

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_cho"
            android:src="@mipmap/nike" />

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_cho"
            android:src="@mipmap/nike" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_tktt">
        <ImageButton
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/nike"
            android:background="@drawable/bg_cho"/>
        <ImageButton
            android:id="@+id/img5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/nike"
            android:background="@drawable/bg_cho"
            android:layout_marginLeft="10dp"/>
        <ImageButton
            android:id="@+id/img6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/nike"
            android:background="@drawable/bg_cho"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/bg_tt"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6C1235"
        app:menu="@menu/menu_bottom"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"/>


</RelativeLayout>