<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCAD4"
    tools:context=".dangnhap_dangky">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#FF9190">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_cho"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tên tài khoản :"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/taikhoan"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Nhập tên tài khoản..."
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_khung"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu :"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/matkhau"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Nhập mật khẩu..."
                    android:inputType="textPassword"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_khung"/>
            </LinearLayout>

            <TextView
                android:id="@+id/quen_mk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu ?"
                android:textColor="#125495"
                android:textSize="15dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_dn"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Đăng nhập"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_tktt"

                    />
                <Button
                    android:id="@+id/btn_dk"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Đăng ký"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="120dp"
                    android:background="@drawable/bg_tktt"

                    />
            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>