<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFE5D8"
    tools:context=".XemthongtinUsers">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Tên : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/Ten_use"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:background="#AC882E"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Địa chỉ : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/diachi_use"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:background="#AC882E"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="SĐT : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/sdt_use"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:background="#AC882E"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Ngày sinh : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/ngaysinh_use"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:background="#AC882E"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Tên TK : "
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/taikhoan_use"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:background="#AC882E"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/xacnhan_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác Nhận"
        android:background="@drawable/bg_tt"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="290dp"/>
</RelativeLayout>